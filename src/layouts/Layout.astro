---
import "../styles/global.css";
import MusicPlayer from "../components/MusicPlayer.astro";
import Navbar from "../components/Navbar.astro";
import Footer from "../components/Footer.astro";
import Banner from "../components/Banner2.astro";

const { pathname } = Astro.url;
const base = import.meta.env.BASE_URL;
const normalize = (path: string) => path.replace(/\/$/, "") || "/";
const isHome = normalize(pathname) === normalize(base);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/MaryYNefta/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>Invitacion Mary y Neft</title>
	</head>
	<body class="bg-white">
		<MusicPlayer song="/MaryYNefta/song_wedding.mp3" volume={0.3} />
		{isHome && <Banner />}
		<Navbar />
		<main>
			<slot />
		</main>
		<Footer />
	</body>
</html>
