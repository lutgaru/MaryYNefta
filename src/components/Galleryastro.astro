---
import type { ImageMetadata } from 'astro';
import Gallery from './Gallery.vue'

const imagesimport = import.meta.glob<{ default: ImageMetadata }>('/src/assets/fotos/*.{jpeg,jpg,png,gif}')
const images: { id: number; url: string }[] = Object.entries(imagesimport).map(([path, image], index) => {
  return {
    id: index + 1,
    url: path
  }
})
---

<div id="gallery" class="w-full overflow-x-hidden">
    <Gallery images={images} client:load/>
</div>